<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="AutomatedWebTesting">

    <!--Browser test (Chrome, Firefox, Edge, Safari)-->
    <parameter name="browser" value="Chrome"/>
    <test name="Suite">
        <parameter name="url" value="https://www.saucedemo.com"/>
        <classes>
            <class name="com.automation.login.LoginTest"/>
            <class name="com.automation.login.LogoutTest"/>
            <class name="com.automation.buy_products.addToCartTest"/>
            <class name="com.automation.buy_products.removeProducts"/>
            <class name="com.automation.buy_products.checkOutTest"/>
        </classes>
    </test>

</suite>