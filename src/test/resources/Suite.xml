    <parameter name="url" value="https://www.saucedemo.com"/>
    <parameter name="baseUsername" value="standard_user"/>
    <parameter name="password" value="secret_sauce"/>

    <test name="Suite">
        <classes>
            <class name="com.automation.authentication.LoginTest"/>
            <class name="com.automation.authentication.LogoutTest"/>
            <class name="com.automation.buy_products.addToCartTest"/>
            <class name="com.automation.buy_products.removeProducts"/>
            <class name="com.automation.buy_products.checkOutTest"/>
        </classes>
    </test>

</suite>